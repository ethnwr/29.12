#include <iostream>

int* sd(int arr[], int size)
{
	int a = 0;
	int col = 0;
	int* arr2 = new int[size];
	for (int i = 0; i < size; i++)
	{
		if (arr[i] > 0)
		{
			arr2[a] = arr[i];
			a++;
			
			
		}
		else
		{
			col++;
		}
	}

	delete arr;

	for (int i = 0; i < col; i++)
	{
		std::cout << arr2[i];
	}
	return 0;
}
int main()
{
	setlocale(LC_ALL, "rus");
	int* arr = new int[7] {1,-3,-2,4,-4,5,-4};
	int size = 7;
	
	sd(arr, size);
	
}
