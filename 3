#include <iostream>

int* sd(int arr[],int arr2[], int size)
{
	int a = 0;
	int* pr;
	for (int i = 0; i < size; i++)
	{
		for (int j = 0; j < size; j++)
		{
			if (arr[i] == arr2[j])
			{
				a++;
				if (a >= 5)
				{
					return pr = &arr2[0];
				}
				else
				{
					return 0;
				}
			}
		}
	}
}
int main()
{
	setlocale(LC_ALL, "rus");
	int	arr[5] = {1,0,-3,8,2 };
	int arr2[5] = { 4,6,-3,8,2 };
	int size = sizeof(arr) / sizeof(arr[0]);
	
	sd(arr, arr2, size);
	
}
