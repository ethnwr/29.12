#include <iostream>

void sd(int arr[], int size,int *temp,int *temp2,int *temp3)
{
	int colotri = 0;
	int colpolo = 0;
	int colnul = 0;
	for (int i = 0; i < size; i++)
	{
		if (arr[i] < 0)
		{
			colotri++;
		}
		if (arr[i] > 0)
		{
			colpolo++;
		}
		if (arr[i] == 0)
		{
			colnul++;
		}
	}
	*temp = colotri;
	*temp2 = colpolo;
	*temp3 = colnul;
}
int main()
{
	setlocale(LC_ALL, "rus");
	int	arr[5] = {1,0,-3,8,2 };
	int size = sizeof(arr) / sizeof(arr[0]);
	int temp = 0;
	int temp2 = 0;
	int temp3 = 0;
	sd(arr,size,&temp,&temp2,&temp3);
	std::cout << "Количество отрицательных - " << temp << std::endl;
	std::cout << "Количество положительных - " << temp2 << std::endl;
	std::cout << "Количество нулей - " << temp3 << std::endl;
}
