#include <iostream>

void sd(int arr[], int size,int *temp,int *temp2)
{
	int sum = 0;
	int proez = 1;
	for (int i = 0; i < size; i++)
	{
		sum += arr[i];
		proez *= arr[i];
		
	}
	*temp = sum;
	*temp2 = proez;
	
}
int main()
{
	setlocale(LC_ALL, "rus");
	int	arr[5] = { 1,5,6,8,2 };
	int size = sizeof(arr) / sizeof(arr[0]);
	int temp = 0;
	int temp2 = 0;
	sd(arr,size,&temp,&temp2);
	std::cout << "Сумма - " << temp << std::endl;
	std::cout << "Произведение - " << temp2 << std::endl;
}
